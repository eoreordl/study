  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Function - Variable</title>
</head>
<body>
  <script>
    function calcSum(n) {
      let sum = 0;

      for(let i = 1; i <= n; i++) {
        sum += i;
      }
      document.write("1부터 " + n + "까지 더하면" + sum);
    }
    
  let user_num = prompt("얼마나 더할까요?");
    if(user_num !== null) {
      calcSum(parseInt(user_num));
    }
    else {
      alert("숫자를 입력하지 않았습니다.");
    }
  </script>
</body>
</html>
